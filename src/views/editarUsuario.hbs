{{>menu}}
<section class="layout">
  <div class="top">
    <i class="uil uil-bars sidebar-toggle"></i>
    <div hidden class="search-box">
      <i class="uil uil-search"></i>
      <input type="text" placeholder="Search Here..." />
    </div>
    <img hidden src="images/user.png" alt="" />
  </div>
  <div class="dash-content">
    {{#if err}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      {{description}}
      <hr>
      <h5>Detalhe do Erro:</h5>
      <p>{{err}}</p>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    {{/if}}
    <form action="/usuario/editar/{{user.id}}?_method=PUT" method="POST">
      <div class="form-group">
        <h3>Dados Pessoais</h3>
        <div class="form-row">
          <div class="form-group col-sm-10">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" value="{{user.nome}}" />
          </div>
          <div class="form-group col-sm-2">
            <label for="idade">Idade</label>
            <input type="text" class="form-control" id="idade" name="idade" value="{{user.idade}}" />
          </div>
        </div>
        <div class="form-row needs-validation">
          <div class="form-group col-md-4">
            <label for="cpf">CPF</label>
            <input type="text" class="form-control" id="cpf" name="cpf" value="{{user.cpf}}" />
          </div>
          <div class="form-group col-md-4">
            <label for="dtnascimento">Data de Nascimento</label>
            <input type="date" class="form-control" id="dtnascimento" name="dtnascimento"
              value="{{dateFormat  user.dtnascimento 'YYYY-MM-DD'}}" />
          </div>
          <div class="form-group col-md-4">
            <label for="sexo">Sexo</label>
            <select id="sexo" name="sexo" class="form-control" value="{{user.sexo}}">
              <option>Masculino</option>
              <option>Feminino</option>
              <option>Outros</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-4">
            <label for="fixo">Telefone Fixo</label>
            <input type="text" class="form-control" id="fixo" name="fixo" value="{{user.fixo}}" />
          </div>
          <div class="form-group col-md-4">
            <label for="celular">Telefone Celular</label>
            <input type="text" class="form-control" id="celular" name="celular" value="{{user.celular}}" />
          </div>
          <div class="form-group col-md-4">
            <label for="escolaridade">Escolaridade</label>
            <select id="escolaridade" name="escolaridade" class="form-control" value="{{user.escolaridade}}">
              <option></option>
              <option>Analfabeto</option>
              <option>Fundamental Incompleto</option>
              <option>Fundamental Completo</option>
              <option>Médio Incompleto</option>
              <option>Médio Completo</option>
              <option>Superior Incompleto</option>
              <option>Superior Completo</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-sm-6">
            <label for="email">E-mail</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="E-mail" value="{{user.email}}"
              readonly />
          </div>
          <div class="form-group col-sm-6">
            <label for="senha">senha</label>
            <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha"
              value="{{user.senha}}" />
          </div>
        </div>
      </div>
      <h3>Endereço</h3>
      <div class="form-row">
        <div class="form-group col-md-2">
          <label for="cep">CEP</label>
          <input type="text" class="form-control" id="cep" name="cep" value="{{user.endereco.cep}}" />
        </div>
        <div class="form-group col-md-2">
          <button type="button" id="buttonPesquisaCep" class="btn btn-secondary" style="margin-top: 32px"
            onclick="pesquisacep()">
            Buscar Endereço
          </button>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-10">
          <label for="logradouro">Endereço</label>
          <input type="text" class="form-control" id="logradouro" name="logradouro"
            value="{{user.endereco.logradouro}}" />
        </div>
        <div class="form-group col-md-2">
          <label for="numero">Número</label>
          <input type="text" class="form-control" id="numero" name="numero" value="{{user.endereco.numero}}" />
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="bairro">Bairro</label>
          <input type="text" class="form-control" id="bairro" name="bairro" value="{{user.endereco.bairro}}" />
        </div>
        <div class="form-group col-md-4">
          <label for="cidade">Cidade</label>
          <input type="text" class="form-control" id="cidade" name="cidade" value="{{user.endereco.cidade}}" />
        </div>
        <div class="form-group col-md-4">
          <label for="estado">Estado</label>
          <input type="text" class="form-control" id="estado" name="estado" value="{{user.endereco.estado}}" />
        </div>
      </div>
      <button type="submit" class="btn btn-secondary" style="margin-top: 32px">
        Atualizar
      </button>
    </form>
  </div>
</section>