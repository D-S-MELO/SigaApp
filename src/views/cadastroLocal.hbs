{{>menu}}
<section class="layout">
  <div class="top">
    <i class="uil uil-bars sidebar-toggle"></i>
    <div hidden class="search-box">
      <i class="uil uil-search"></i>
      <input type="text" placeholder="Search Here..." />
    </div>
    <img hidden src="images/user.png" alt="" />
  </div>
  <div class="dash-content">
    {{#if err}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      {{description}}
      <hr>
      <h5>Detalhe do Erro:</h5>
      <p>{{err}}</p>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    {{/if}}
    <form class="needs-validation " action="/local/cadastro" method="POST">
      <div class="form-group">
        <h3>Novo Local de Atendimento</h3>
        <div class="form-row">
          <div class="form-group col-sm-10">
            <label for="nome">Local</label>
            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" value="{{nome}}"
              required />
          </div>
        </div>
        <button type="submit" class="btn btn-secondary" style="margin-top: 32px">
          Cadastrar
        </button>
    </form>
  </div>
</section>