{{>menu}}
<section class="layout">
  <div class="top">
    <i class="uil uil-bars sidebar-toggle"></i>
    <div hidden class="search-box">
      <i class="uil uil-search"></i>
      <input type="text" placeholder="Search Here..." />
    </div>
    <img hidden src="images/user.png" alt="" />
  </div>
  <div class="dash-content">
    {{>mensagem}}
    {{>error_msg}}
    <div class="overview">
      <div class="title">
        <span class="text">Locais de Atendimento</span>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-8 col-lg-8">
          <input type="search" class="form-control" id="buscaLocal" name="buscaLocal" placeholder="Busca....">
        </div>
        <div class="col-md-4 col-lg-4 mt-2 mt-md-0">
          <form id="form-cadastrar" action="/local/cadastro?_method=GET" method="GET">
            <button type="submit" id="buttonAddLocal" class="btn btn-secondary btn-block">Novo Local</button>
          </form>
        </div>
      </div>
    </div>

    <table id="tabela" name"tabela" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th>Local</th>
          <th>AÃ§oes</th>
        </tr>
      </thead>
      <tbody>
        {{#each local}}
        <tr>
          <td>{{nome}}</td>
          <td>
            <div class="d-inline-block">
              <form id="form-editar-{{_id}}" action="/local/editar/{{_id}}?_method=GET" method="GET">
                <button class="btn btn-link me-2"><i class='bx bxs-edit' id='{{_id}}'><i
                      class="uil uil-pen"></i></button>
              </form>
            </div>
            <div class="d-inline-block">
              <form id="form-excluir-{{_id}}" action="/local/deletar/{{_id}}?_method=DELETE" method="POST">
                <button type="button" class="btn btn-link btn-excluir" data-id="{{_id}}"><i
                    class="uil uil-trash"></i></button>
              </form>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>