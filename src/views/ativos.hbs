{{>menu}}
<section class="layout">
  <div class="top">
    <i class="uil uil-bars sidebar-toggle"></i>
    <div hidden class="search-box">
      <i class="uil uil-search"></i>
      <input type="text" placeholder="Search Here..." />
    </div>
    <img hidden src="images/user.png" alt="" />
  </div>
  <div class="dash-content">
    {{>mensagem}}
    {{>error_msg}}
    <div class="overview">
      <div class="title">
        <span class="text">Equipamentos</span>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-8 col-lg-8">
          <input type="search" class="form-control" id="buscaequip" name="buscaequip" placeholder="Busca....">
        </div>
        <div class="col-md-4 col-lg-4 mt-2 mt-md-0">
          <form id="form-cadastrar" action="/ativosAdd?_method=GET" method="GET">
            <button type="submit" id="buttonAddUser" class="btn btn-secondary btn-block">Novo Equipamento</button>
          </form>
        </div>
      </div>
    </div>
    <table id="tabelaAtivos" name"tabelaAtivos" class="table table-striped table-bordered table-sm" cellspacing="0"
      width="100%">
      <thead>
        <tr>
          <th>Identificador</th>
          <th>Nome</th>
          <th>Local</th>
          <th>Editar</th>
          <th>Excluir</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
    <div id="paginacao">
      <button id="pagina-anterior"><i class="uil uil-angle-left"></i></button>
      <button id="pagina-proxima"><i class="uil uil-angle-right"></i></button>
    </div>
  </div>
</section>